<!DOCTYPE html>
<html>
<head>
<style>


#lostid {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 1000px;
  margin : auto;
}


#lostid td, #lostid th {
  border: 1px solid #ddd;
  padding: 8px;
}

#lostid tr:nth-child(even){background-color: #f2f2f2;}

#lostid tr:hover {background-color: #ddd;}

#lostid th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}
p
{
    color:red;
    text-align:center;
}

</style>
</head>
<body>

<table id="lostid">
   <tr>
     <th>Student Id</th>
     <th>Name</th>
     <th>Current year</th>
     <th>Department</th>
     <th>Date lost</th>
     <th>Status</th>
     <th> Admin approval </th>
   </tr>
   
   <% if (result !== 0) { %>
      <% result.forEach( result => { %>
      <tr>
        <td> <%= result.sId %>  </td>
        <td> <%= result.name %>  </td>
        <td> <%= result.currentyear %>  </td>
        <td> <%= result.Department %>  </td>
        <td> <%= result.datelost %>  </td>
        <td> <%= result.status%>  </td>
        <td><a href="lostid/<%= result.name %>">approve</a></td> 
      
      </tr>
      <% }) %>
    </table>
    <% } else { %>
    </table>
    <p> There is no lost id  in the university at the moment </p>
   
    <%  } %>
 
</table>

</body>
</html>


